      "decorations": [
        {
          // "backgroundColor": "#ffcc00",
          "color": "#ffcc00",
          // "fontWeight": "bold"
          "fontStyle": "italic"
        },
        {
          "backgroundColor": "#ffcc00",
          "color": "#1f1f1f",
          "fontStyle": "italic"
        }
